// -*- mode: jsonc -*-
{
	"layer": "top", //Waybar at top layer
	"position": "top", // Waybar position (top|bottom|left|right)
	"height": 33, // Waybar height (to be removed for auto height)
	// "width": 1280, // Waybar width
	"spacing": 6, // Gaps between modules (4px)
	// Choose the order of the modules
	"modules-left": ["sway/workspaces", "sway/mode", "sway/scratchpad"],
	"modules-right": [
		"mpris",
		"keyboard-state",
		"group/levels",
		"group/connections",
		"group/power",
		"group/system",
		"clock"
	],
	// Modules configuration
	"sway/workspaces": {
		"all-outputs": true,
		"disable-scroll": true
	},
	"sway/mode": {
		"format": "<span style=\"italic\">{}</span>"
	},
	"sway/scratchpad": {
		"format": "{icon} {count}",
		"show-empty": false,
		"format-icons": ["", "Ôãí"],
		"tooltip": true,
		"tooltip-format": "{app}: {title}"
	},
	"mpris": {
		"interval": 0,
		"format": "{player_icon} {title} - {artist} {position}",
		"format-playing": "{status_icon} <i>{title} - {artist} {position}</i>",
		"format-paused": "{status_icon} <i>{title} - {artist} {position}</i>",
		"player-icons": {
			"tidal-hifi": "üóø",
			"default": "üóø",
			"mpv": "üéµ"
		},
		"status-icons": {
			"playing": "\uF04C",
			"paused": "\uF04B"
		},
		"ignored-players": ["firefox", "chrome", "brave"]
	},
	"keyboard-state": {
		"numlock": true,
		"capslock": false,
		"format": "{name} {icon}",
		"format-icons": {
			"locked": "ÔÄ£",
			"unlocked": "ÔÇú"
		}
	},
	"group/levels": {
		"orientation": "horizontal",
		"modules": ["backlight", "pulseaudio", "pulseaudio/slider"]
	},
	"backlight": {
		"format": "{icon} {percent}%",
		"format-icons": ["üåë", "üåò", "üåó", "üåñ", "üåï"],
		"on-scroll-up": "brightnessctl set +2%",
		"on-scroll-down": "brightnessctl set 2%-"
	},
	"pulseaudio": {
		// "scroll-step": 1, // %, can be a float
		"format": "{format_source} {icon} {volume}%",
		"format-muted": "{format_source} Ôö© 0%",
		"format-bluetooth": "{format_source} Ôäî {volume}%",
		"format-bluetooth-muted": "{format_source} Ôäî Ôö© 0%",
		"format-source": "ÔÑ∞ {volume}%",
		"format-source-muted": "ÔÑ± 0%",
		"format-icons": {
			"headphone": "ÔÄ•",
			"hands-free": "Ôñê",
			"headset": "Ôñê",
			"phone": "ÔÇï",
			"portable": "ÔÇï",
			"car": "ÔÜπ",
			"default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
		},
		"on-click": "pavucontrol",
		"on-click-right": "~/.config/sway/scripts/connect_pyle.sh"
	},
	"pulseaudio/slider": {
		"min": 0,
		"max": 130,
		"orientation": "horizontal"
	},
	"group/connections": {
		"orientation": "horizontal",
		"modules": ["network", "bluetooth"]
	},
	"network": {
		"format-wifi": "Ôá´ {essid} ({signalStrength}%)",
		"format-ethernet": "Ôûñ {ipaddr}/{cidr}",
		"tooltip-format": "Ôûñ {ifname} via {gwaddr}",
		"format-linked": "Ôûñ {ifname} (No IP)",
		"format-disconnected": "‚ö† Disconnected",
		"format-alt": "{ifname}: {ipaddr}/{cidr}"
	},
	"bluetooth": {
		"interval": 10,
		"format": "Ôäî {status}",
		"format-connected-battery": "\uF294 üîµ {device_alias} {device_battery_percentage}%",
		"tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
		"tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
		"tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
		"tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
		"on-click": "~/.config/sway/scripts/bluetooth_toggle.sh",
	},
	"group/power": {
		"orientation": "horizontal",
		"modules": ["battery", "power-profiles-daemon"]
	},
	"battery": {
		"interval": 1,
		"states": {
			"usable": 80, // 80% or more
			"warning": 20,
			"critical": 10
		},
		"format": "{icon} {capacity}%",
		"format-full": "{icon} {capacity}%",
		"format-charging": "üîå {capacity}%",
		"format-plugged": "üîå {capacity}%",
		"tooltip": true,
		"tooltip-format": "Time to empty: {time}\nHealth: {health}",
		"tooltip-format-charging": "Time to full: {time}\nHealth: {health}",
		"tooltip-format-plugged": "Time to full: {time}\nHealth: {health}",
		"format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
	},
	"power-profiles-daemon": {
		"format": "{icon}",
		"tooltip-format": "Power profile: {profile}\nDriver: {driver}",
		"tooltip": true,
		"format-icons": {
			"default": "üóø",
			"performance": "‚ö°",
			"balanced": "‚öñÔ∏è",
			"power-saver": "üîã"
		}
	},
	"group/system": {
		"orientation": "inherit",
		"drawer": {
			"transition-duration": 300,
			"children-class": "hidden",
			"click-to-reveal": true,
			"transition-left-to-right": true
		},
		"modules": ["custom/title1", "cpu", "memory", "disk", "temperature"]
	},
	"custom/title1": {
		"format": "ÔÉâ"
	},
	"cpu": {
		"interval": 1,
		"format": "{icon0}{icon1}{icon2}{icon3}{usage:>2}% CPU",
		"format-icons": ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà"],
		"tooltip": true
	},
	"memory": {
		"interval": 1,
		"format": "{used:0.2f}/{total:0.2f} Gb RAM",
		"tooltip": true
	},
	"disk": {
		"interval": 30,
		"format": "{specific_free:0.2f} Gb Available",
		"unit": "GB"
	},
	"temperature": {
		"critical-threshold": 50,
		"format": "{temperatureC}¬∞C",
		"format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
	},
	"clock": {
		"format": "üïó {:%H:%M:%S}",
		"format-alt": "üïó {:%d-%m-%y}",
		"tooltip-format": "<span size='12pt' font='Noto Sans Mono'><tt>{calendar}</tt></span>",
		"calendar": {
			"mode"          : "month",
			"mode-mon-col"  : 3,
			"on-scroll"     : 1,
			"on-click-right": "mode",
			"format": {
				"months":     "<span color='#ffead3'><b>{}</b></span>",
				"weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
				"days":       "<span color='#ecc6d9'><b>{}</b></span>",
				"today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
			}
		},
		"actions": {
			"on-click-right": "mode",
			"on-scroll-up": "shift_up",
			"on-scroll-down": "shift_down"
        }
	}
